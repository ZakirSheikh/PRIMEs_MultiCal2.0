<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/date_calculation_activity"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/date_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        android:elevation="4dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:tabIndicatorColor="?attr/accentColorPrimary"
        app:tabTextAppearance="@style/Date_Calculation_TabLayoutTextStyle"
        android:background="?android:attr/windowBackground"
        android:minHeight="?attr/actionBarSize"
        app:tabTextColor="?attr/secondaryTextColor"
        app:tabSelectedTextColor="?attr/accentColorPrimary"
        />

    <androidx.viewpager.widget.ViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/date_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>